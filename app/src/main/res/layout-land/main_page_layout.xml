<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/reg_screen_800">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/greeting_user_text_label"
        android:id="@+id/dispaly_name_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setting_imageButton"
        android:src="@mipmap/settings_96"
        android:onClick="onClickSettings"
        android:contentDescription="@string/setting_button_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit_imageButton"
        android:src="@mipmap/exit_96"
        android:contentDescription="@string/exit_image_button_label"
        android:onClick="onClickExit"
        android:layout_alignBottom="@+id/gamcenter_imageButton"
        android:layout_alignRight="@+id/setting_imageButton"
        android:layout_alignEnd="@+id/setting_imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gamcenter_imageButton"
        android:src="@mipmap/gamecenter_96"
        android:onClick="onClickGameCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/play_imagebutton_label" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_imageButton"
        android:src="@mipmap/play_96"
        android:onClick="onClickPlay"
        android:contentDescription="@string/gamecenter_imagebutton_label"
        android:layout_below="@+id/setting_imageButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiplayer_imageButton"
        android:src="@mipmap/multiplayer_96"
        android:layout_below="@+id/play_imageButton"
        android:layout_centerHorizontal="true"
        android:onClick="onClickMultiplayer"
        android:nestedScrollingEnabled="false"
        android:contentDescription="Multiplayer Mode" />

</RelativeLayout>